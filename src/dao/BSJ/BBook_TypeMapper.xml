<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BBook_TypeMapper">
	<select id="queryType" parameterType="Integer" resultMap="Type">
		select * from book_type where book_id={#b_id}
	</select>
	<resultMap id="Type" type="BBook_Type">
		<id property="id" column="id"/>
		<collection property="bookTypeList" ofType="BBookType" column="type_id"
					select="mapper.BookTypeMapper.queryTypeById"
		/>
	</resultMap>
</mapper>